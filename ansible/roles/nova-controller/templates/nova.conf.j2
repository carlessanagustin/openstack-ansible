[DEFAULT]
debug=True
verbose=True
dhcpbridge_flagfile=/etc/nova/nova.conf
dhcpbridge=/usr/bin/nova-dhcpbridge
logdir=/var/log/nova
state_path=/var/lib/nova
lock_path=/var/lock/nova
force_dhcp_release=True
libvirt_use_virtio_for_bridges=True
ec2_private_dns_show_ip=True
api_paste_config=/etc/nova/api-paste.ini
enabled_apis=ec2,osapi_compute,metadata

rpc_backend = rabbit
rabbit_host = {{ os_hosts.controller.management_ip }}
rabbit_password = {{ rabbit_password }}

auth_strategy = keystone

my_ip = {{ os_hosts.controller.management_ip }}

vncserver_listen = {{ os_hosts.controller.management_ip }}
vncserver_proxyclient_address = {{ os_hosts.controller.management_ip }}

network_api_class = nova.network.neutronv2.api.API
security_group_api = neutron
linuxnet_interface_driver = nova.network.linux_net.LinuxOVSInterfaceDriver
firewall_driver = nova.virt.firewall.NoopFirewallDriver

[keystone_authtoken]
auth_uri = http://{{ os_hosts.controller.management_ip }}:5000/v2.0
identity_uri = http://{{ os_hosts.controller.management_ip }}:35357
admin_tenant_name = service
admin_user = nova
admin_password = {{ service_users.nova.password }}

[glance]
host = {{ os_hosts.controller.management_ip }}

[database]
connection = mysql://nova:{{ os_dbs.nova.password }}@{{ os_hosts.controller.management_ip }}/nova

[neutron]
url = http://{{ os_hosts.controller.management_ip }}:9696
auth_strategy = keystone
admin_auth_url = http://{{ os_hosts.controller.management_ip }}:35357/v2.0
admin_tenant_name = service
admin_username = neutron
admin_password = {{ service_users.neutron.password }}

service_metadata_proxy = True
metadata_proxy_shared_secret = {{ metadata_proxy_shared_secret }}