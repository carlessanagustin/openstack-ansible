# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  config.vm.box = "ubuntu/trusty64"

  if Vagrant.has_plugin?("vagrant-cachier")
      config.cache.scope = :box
  end

  config.vm.provider :virtualbox do |vb|
    vb.customize ["modifyvm", :id, "--memory", "2048"]
    vb.customize ["modifyvm", :id, "--cpus", "2"]
    vb.customize ["modifyvm", :id, "--nicpromisc2", "allow-all"]
    vb.customize ["modifyvm", :id, "--nicpromisc3", "allow-all"]
  end

  config.vm.define "controller" do |controller|
    controller.vm.hostname = "controller"
    controller.vm.network "private_network", ip: "10.0.0.11"
    controller.vm.network "private_network", ip: "10.0.1.11"
    controller.vm.network "public_network", bridge: "en0: Wi-Fi (AirPort)"
    controller.vm.provider :virtualbox do |vbcontroller|
        vbcontroller.customize ["modifyvm", :id, "--memory", "4096"]
        vbcontroller.customize ["modifyvm", :id, "--cpus", "2"]
        vbcontroller.customize ["modifyvm", :id, "--nicpromisc2", "allow-all"]
        vbcontroller.customize ["modifyvm", :id, "--nicpromisc3", "allow-all"]
        vbcontroller.customize ["modifyvm", :id, "--nicpromisc4", "allow-all"]
        vbcontroller.customize ["createhd",  "--filename", "controller_d0", "--size", "2048"]
        vbcontroller.customize ["createhd",  "--filename", "controller_d1", "--size", "2048"]
        vbcontroller.customize ["storageattach", :id, "--storagectl", "SATAController", "--port", "1", "--type", "hdd", "--medium", "controller_d0.vdi"]
        vbcontroller.customize ["storageattach", :id, "--storagectl", "SATAController", "--port", "2", "--type", "hdd", "--medium", "controller_d1.vdi"]
    end
  end

 # config.vm.define "network1" do |network1|
 #  network1.vm.hostname = "network1"
 #   network1.vm.network "private_network", ip: "10.0.0.21"
 #   network1.vm.network "private_network", ip: "10.0.1.21"
 #   network1.vm.network "public_network", bridge: "en0: Wi-Fi (AirPort)"
 #    network1.vm.provision "shell", inline: "route del default && route add default gw 192.168.1.1 eth3"
 # end

  config.vm.define "compute1" do |compute1|
    compute1.vm.hostname = "compute1"
    compute1.vm.network "private_network", ip: "10.0.0.31"
    compute1.vm.network "private_network", ip: "10.0.1.31"
    compute1.vm.provider :virtualbox do |vbcompute1|
        vbcompute1.customize ["createhd",  "--filename", "compute1_d0", "--size", "2048"]
        vbcompute1.customize ["createhd",  "--filename", "compute1_d1", "--size", "2048"]
        vbcompute1.customize ["storageattach", :id, "--storagectl", "SATAController", "--port", "1", "--type", "hdd", "--medium", "compute1_d0.vdi"]
        vbcompute1.customize ["storageattach", :id, "--storagectl", "SATAController", "--port", "2", "--type", "hdd", "--medium", "compute1_d1.vdi"]
    end

  end

  config.vm.define "compute2" do |compute2|
    compute2.vm.hostname = "compute2"
    compute2.vm.network "private_network", ip: "10.0.0.32"
    compute2.vm.network "private_network", ip: "10.0.1.32"
    compute2.vm.provider :virtualbox do |vbcompute2|
        vbcompute2.customize ["createhd",  "--filename", "compute2_d0", "--size", "2048"]
        vbcompute2.customize ["createhd",  "--filename", "compute2_d1", "--size", "2048"]
        vbcompute2.customize ["storageattach", :id, "--storagectl", "SATAController", "--port", "1", "--type", "hdd", "--medium", "compute2_d0.vdi"]
        vbcompute2.customize ["storageattach", :id, "--storagectl", "SATAController", "--port", "2", "--type", "hdd", "--medium", "compute2_d1.vdi"]
    end
  end

  config.vm.provision :ansible do |ansible|
        ansible.groups = {
           "vagrant-openstack" => ["controller", "compute1", "compute2"]
        }
        ansible.playbook = "../../ansible/openstack-multi.yml"
        ansible.raw_arguments = "--diff"
        #ansible.verbose = "vvv"
        #ansible.skip_tags = ["configuration"]
        #ansible.tags = ["debug"]
  end

end
